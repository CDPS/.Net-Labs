@using OdeToFood.Entities
@model Restaurant

<div class="panel-default">
    <div class="panel-heading">
        <h3>
            @Model.Name
        </h3>
    </div>
    <div class="panel-body">
        <span>Location: @Model.Locatiion</span>
        <span>Cuisine:  @Model.Cuisine</span>
    </div>
    <div class="panel-footer">
        <a class="btn-lg" asp-page="./Detail" asp-route-restaurantId="@Model.Id">
            <i class="glyphicon glyphicon-zoom-in" ></i>
        </a>
        <a class="btn-lg" asp-page="./Edit" asp-route-restaurantId="@Model.Id">
            <i class="glyphicon glyphicon-edit" ></i>
        </a>
        <a class="btn-lg" asp-page="./Delete" asp-route-restaurantId="@Model.Id">
            <i class="glyphicon glyphicon-trash" ></i>
        </a>
    </div>
</div>